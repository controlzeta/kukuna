@page
@model WebUI.Pages.MealPlans.EditModel

<h4>MealPlan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MealPlan.MealPlanId" />
            <div class="form-group">
                <label asp-for="MealPlan.DayOfWeek" class="control-label"></label>
                <input asp-for="MealPlan.DayOfWeek" class="form-control" />
                <span asp-validation-for="MealPlan.DayOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealPlan.RecipeId" class="control-label"></label>
                <select asp-for="MealPlan.RecipeId" class="form-control" asp-items="ViewBag.RecipeId"></select>
                <span asp-validation-for="MealPlan.RecipeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
