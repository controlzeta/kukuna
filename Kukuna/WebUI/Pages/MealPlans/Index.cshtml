@page
@model WebUI.Pages.MealPlans.IndexModel
@{
    ViewData["Title"] = "Comidas";
}
<p>
    <a asp-page="Create">Crear uno Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MealPlan[0].DayOfWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealPlan[0].DayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealPlan[0].RecipeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MealPlan)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DayOfWeek)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DayName)
                </td>
                <td>
                    <a asp-page="../Recipes/Details" asp-route-id="@item.RecipeId">@Html.DisplayFor(modelItem => item.RecipeName)</a>
                </td>
                <td>
                    <a class="button" asp-page="./Edit" asp-route-id="@item.MealPlanId">Editar</a> |
                    <a class="button" asp-page="./Details" asp-route-id="@item.MealPlanId">Detalle</a> |
                    <a class="button" asp-page="./Delete" asp-route-id="@item.MealPlanId">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
