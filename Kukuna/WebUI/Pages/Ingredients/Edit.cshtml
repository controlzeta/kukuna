@page
@model WebUI.Pages.Ingredients.EditModel

<h4>Ingredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ingredient.IngredientId" />
            <div class="form-group">
                <label asp-for="Ingredient.IngredientName" class="control-label"></label>
                <input asp-for="Ingredient.IngredientName" class="form-control" />
                <span asp-validation-for="Ingredient.IngredientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.Category" class="control-label"></label>
                <input asp-for="Ingredient.Category" class="form-control" />
                <span asp-validation-for="Ingredient.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
