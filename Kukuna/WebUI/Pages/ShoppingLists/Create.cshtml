@page
@model WebUI.Pages.ShoppingLists.CreateModel

<h4>ShoppingList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShoppingList.IngredientId" class="control-label"></label>
                <select asp-for="ShoppingList.IngredientId" class ="form-control" asp-items="ViewBag.IngredientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ShoppingList.UnitId" class="control-label"></label>
                <select asp-for="ShoppingList.UnitId" class ="form-control" asp-items="ViewBag.UnitId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ShoppingList.TotalQuantity" class="control-label"></label>
                <input asp-for="ShoppingList.TotalQuantity" class="form-control" />
                <span asp-validation-for="ShoppingList.TotalQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
